<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-20 mt-6">
  <p>name:<%= @item.name %></p>
  <%= @item.size %>
  <% @item.photos.each do |photo| %>
    <div class="mt-6 mb-2 ml-4 mr-4">
      <%= image_tag photo.image.url, class:"h-auto max-w-full rounded-lg" %>
    </div>
  <% end %>
  <%= @item.flavor %>
  <%= @item.maker %>
  <%= @item.alcohol_content %>
  <%= @item.country_of_origin %>
  <%= @item.content %>

  <%= render 'shared/crud_menus', item: @item %>

  <div class="row justify-content-md-center">
    <div class="col-8 p-4">
      <div class="d-flex justify-content-between mb-3">
        <%= link_to "\"#{@item.name}\"へ戻る", item_path(@item), class: 'align-self-center' %>
        <% if @version.next.present? %>
          <%= button_to 'このバージョンへ戻す', document_version_path(@item, @version),
            class: 'btn btn-outline-primary',
            method: :patch,
            data: { confirm: '本当によろしいですか？' } %>
        <% end %>
      </div>
      <h1 class="font-weight-bold mb-4">
        このバージョンを表示する
      </h1>
      <% @version.changeset.keys.select { |key| %w[name content].include?(key) }.each do |key| %>
        <div class="mb-4">
          <h3 class=font-weight-bold">
            <%= Item.human_attribute_name(key) %>
          </h3>
          <div>
            <%= raw @version.changeset[key].last %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>