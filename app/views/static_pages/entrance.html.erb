
<html lang="ja">
  <head>
    <title>BOOZEKUZU</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="description" content="BOOZEKUZU|酒の楽しみを、BoozeKUZUで共有しよう"/>
    <meta name="theme-color" content="#fde047">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags(default_meta_tags) %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "entrance", "data-turbo-track": "reload", defer: true %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300;400;500;600;700;800;900&family=Zen+Maru+Gothic:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="manifest" href="/manifest.json">
    <%= favicon_link_tag('favicon.png') %>
    <link href="<%= image_path("icon192.png") %>" rel="icon" sizes="192x192" type="image/png" />
    <link href="<%= image_path("icon512.png") %>" rel="icon" sizes="512x512" type="image/png" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-5ZYBBZHS1W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-5ZYBBZHS1W');
    </script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9661295819210095"
     crossorigin="anonymous"></script>

    <!-- serviceWorker -->
    <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/service_worker.js')
          .then((registration) => {
            console.log('Service Worker registered:', registration);
          })
          .catch((error) => {
            console.error('Service Worker registration failed:', error);
          });
      });
    }
    </script>
  </head>

  <body>
    <div class="hero h-screen" style="background-image: url(https://boozepedia.s3.ap-northeast-3.amazonaws.com/material/beer.jpeg)">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <div class="replacementContent">
            <p class="text-slate-200 text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600"><%= t('defaults.app_name') %></p>
            <div class="py-4 text-xs"><%= t('defaults.catch_copy2') %><br/><%= t('defaults.catch_copy3') %></div>
            <div class="py-1 text-xs"><%= t('defaults.catch_copy6') %></div>
            <div class=""><%= t('defaults.catch_copy4') %></div>
          </div>
          <div class="object-contain h-64 w-64 fix justify-center scale-150 ml-6"><%= render 'box_boo'%></div>
          <div class="dele-element text-xl font-bold m-4 text-stone-800"><%= t('defaults.catch_copy5') %></div>
          <%= link_to 'Yes', verified_path(choice: 'yes'), class:"btn btn-primary mr-10 dele-element" %>
          <button id="changeBackgroundButton" class="btn btn-primary dele-elementsxqq">No</button>
        </div>
      </div>
    </div>
  </body>
</html>